<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Site</title>
    <!--Statics-->
    <link rel="stylesheet" href="/Home.css">
    <link rel="stylesheet" href="/About.css">
    <link rel="stylesheet" href="/Button.css">
    <link rel="stylesheet" href="/Anime_viewing.css">
    <link rel="stylesheet" href="/Anime_details.css">
    <link rel="stylesheet" href="/Help.css">
    <!--Image Slider-->
    <script src="https://rawgit.com/ruyadorno/simple-slider/master/dist/simpleslider.min.js"></script>
</head>
<body>
    <!-- Header -->
    <header id="headerSection">
        <h1 id="pageTitle">Anime Database </h1>
    </header>

    <!-- Navigation bar -->
    <nav id="mainNav">
        <ul>                   
            <li><a href="/">Home</a></li> 
            <li><a href="/about">About</a></li>
            <li><a href="/help">Help</a></li>
            <li><a href="/contact">Contact Us</a></li>
        </ul>
    </nav>
    <div class="animeImages" data-simple-slider>
        <img id="image1" src="https://static1.cbrimages.com/wordpress/wp-content/uploads/2020/09/Attack-on-Titan-Final-Season-Poster-Header.jpg" style="width: 1850px; height: 400px;" />
        <img id="image2" src="https://www.animationmagazine.net/wordpress/wp-content/uploads/Haikyuu-1.jpg" style="width: 1850px; height: 400px;" />
        <img id="image3" src="https://www.withashleyandco.com/wp-content/uploads/2022/02/JUJUTSU-KAISEN-0-Subs-Trailer.jpg" style="width: 1850px; height: 400px;" />
        <img id="image4" src="https://static1.cbrimages.com/wordpress/wp-content/uploads/2023/11/naruto-byron.jpg" style="width: 1850px; height: 400px;" />
        <img id="image5" src="https://www.animationmagazine.net/wordpress/wp-content/uploads/One-Piece-G5.jpg" style="width: 1850px; height: 400px;" />
        <img id="image6" src="https://beneaththetangles.com/wp-content/uploads/2020/03/banner-demon-slayer.jpg" style="width: 1850px; height: 400px;" />
    </div>

    <main>
        <h2 style="text-align: center;">Top 5 Anime</h2>
<div class="flex-container">
    <% top_5_anime.forEach(anime => { %>
        <div class="anime-item">
            <h3><%= anime.title %></h3>
            <img src="<%= anime.image_url %>" alt="<%= anime.title %>">
            <div class="star-rating">
                <% for (let i = 0; i < 5; i++) { %>
                    <% if (anime.score && i < anime.score) { %>
                        <span class="star">&#9733;</span>
                    <% } else { %>
                        <span class="star">&#9734;</span>
                    <% } %>
                <% } %>
            </div>
            <p>Score: <%= anime.score || 0 %></p>
        </div>
    <% }); %>
</div>

<!-- Search Form -->
<h2 style="text-align: center;">Search Anime</h2>
<form method="GET" action="/search_anime">
    <label for="query">Search Anime:</label>
    <input type="text" id="query" name="query">
    <button type="submit">Search</button>
</form>

<h2 style="text-align: center;">All Currently Airing</h2>

<div class="anime-list">
    <div class="flex-container">
        <% page_obj.forEach(anime => { %>
            <div class="anime-item">
                <h3><%= anime.title %></h3>
                <img src="<%= anime.image_url %>" alt="<%= anime.title %>">
                <div class="star-rating">
                    <% for (let i = 0; i < 5; i++) { %>
                        <% if (anime.score && i < anime.score) { %>
                            <span class="star">&#9733;</span>
                        <% } else { %>
                            <span class="star">&#9734;</span>
                        <% } %>
                    <% } %>
                </div>
                <p>Score: <%= anime.score || 0 %></p>
            </div>
        <% }); %>
    </div>
</div>


            <!--Annyang Box-->
            <div class="audio-navigation">
                <br>
                <h2>Enable your Mic to use our Audio Navigation feature!</h2>
                <ul>
                    <li>Load a Different Page</li>
                        <ul>
                            <li>Say: <strong>Navigate to [page]</strong></li>
                            <li>Say: <strong>Search [anime]</strong> & then click the search button</li>
                        </ul>
                </ul>

                <button onclick="startAnnyang()">Turn On Listening</button>
                <button onclick="stopAnnyang()">Turn Off Listening</button>
            </div>
        

        <!--Annyang Library-->
        <script src="//cdnjs.cloudflare.com/ajax/libs/annyang/2.6.0/annyang.min.js"></script>
        <script>
            if(annyang) {
                //Commands
                var commands = {
                    'Navigate to *page': changePage,
                    'Search *anime': searchAnime
                }

                //Define functions
                 function changePage(page) {
                    if(page == 'home') {
                        window.location.href = "Home.html"
                    } else if (page == 'about') {
                        window.location.href = "About.html"
                    } else if (page == 'help') {
                        window.location.href = "Help.html"
                    } else if (page == 'contact us') {
                        window.location.href = "Contact_us.html"
                    }

                }
                 
                //function to look up the name of the anime
                function searchAnime(anime) {
                    var searchBox = document.getElementById('id_query');
                    if (searchBox) {
                        searchBox.value = anime;
                    } else {
                        console.error('Search box element not found.');
                    }
                }

                //Add command
                annyang.addCommands(commands);

                //Start listening
                function startAnnyang() {
                    annyang.start();
                }

                //Stop listening
                function stopAnnyang() {
                    annyang.abort();
                }

            }
        </script>
    </main>

    <!-- Footer -->
    <footer id="footerSection">
        <p>Â© 2024 Anime Database. All rights reserved. </p>
    </footer>
    <!-- Scripts -->
    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            simpleslider.getSlider();
        });
    </script>
</body>
</html>
